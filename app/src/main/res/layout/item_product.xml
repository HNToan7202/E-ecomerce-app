<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnSanPham"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="126dp"
        android:layout_height="141dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/img" />

    <TextView
        android:id="@+id/tvGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="256.000d"
        android:textColor="#F44336"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imgProduct"
        app:layout_constraintTop_toBottomOf="@+id/imgProduct" />


    <TextView
        android:id="@+id/tvGiaChuaGiam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="256.000đ"
        android:textSize="12sp"

        app:layout_constraintBottom_toBottomOf="@+id/tvGia"
        app:layout_constraintEnd_toEndOf="@+id/imgProduct"
        app:layout_constraintStart_toEndOf="@+id/tvGia"
        app:layout_constraintTop_toTopOf="@+id/tvGia" />

    <TextView
        android:id="@+id/tvNhanHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="LANEIGE"
        android:textColor="#0E4A45"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvGia"
        app:layout_constraintTop_toBottomOf="@+id/tvGia" />

    <TextView
        android:id="@+id/tvTenSp"
        android:layout_width="118dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:text="Nước Tẩy Trang L'Oreal"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="@+id/tvGiaChuaGiam"
        app:layout_constraintStart_toStartOf="@+id/tvNhanHang"
        app:layout_constraintTop_toBottomOf="@+id/tvNhanHang" />

    <TextView
        android:id="@+id/tvSao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#F44336"
        android:drawableEnd="@drawable/baseline_star_24"
        android:text="4.7"
        android:textColor="#ffffff"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/tvTenSp"
        app:layout_constraintTop_toBottomOf="@+id/tvTenSp" />

    <TextView
        android:id="@+id/tvSoNguoiDanhGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="(70)"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSao"
        app:layout_constraintStart_toEndOf="@+id/tvSao"
        app:layout_constraintTop_toTopOf="@+id/tvSao" />

    <TextView
        android:id="@+id/tvLuotMua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:drawableStart="@drawable/baseline_shopping_cart_24"
        android:text="2048"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvTenSp"
        app:layout_constraintTop_toTopOf="@+id/tvSoNguoiDanhGia" />

</androidx.constraintlayout.widget.ConstraintLayout>